{% extends 'base.html.twig' %}

{% block meta_tags %}
    <meta name="description" content="Contactez  Coolisses, l'association rochelaise de professionnels du cinéma">
    <meta name="keywords" content="coolisses, association, cinema, la rochelle, contact, coordonnées, mail, contacter">
    <meta name="robots" content="index, follow">

    <!--meta og:description -->
{% endblock %}

{% block title %}Contactez nous{% endblock %}

{% block body %}
    <style>
        .card img {
            width: 100%;
        }

        .google-map {
            min-height: 300px;
            border: 5px var(--background-color3) solid;
        }

        .footer-icon {
            height: 30px;
            width: 30px;
            fill: var(--dark-blue);
        }

        .alert-email{
            display: none;
            padding: 20px 20px;
            position: fixed;
            top: 100px;
            right: 100px;
            background-color: #2fbb7c;
            border-radius: 20px;
        }

        .alert-btn-close {
            position: absolute;
            top: 20px;
            right: 20px;
            height: 20px;
        }

        .alert-btn-close svg  {
            height: 100%;
            fill: white;
        }
    </style>

    <section class="contact column aic">
        <div class="title">
            <h2>Une question&nbsp?</h2>
        </div>

        <div class="dual-grid gap40">
            <div class="column aic gap20">
                <div class="row sb w100">
                    <h4>FAQ</h4>
                </div>

                {% for question in questions %}
                    <div class="faq">
                        <div class="question row sb">
                            <p>{{ question.question }}</p>
                            <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M233.4 406.6c12.5 12.5 32.8 12.5 45.3 0l192-192c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L256 338.7 86.6 169.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3l192 192z"/></svg>
                        </div>
                        <div class="reponse">
                            <p>{{ question.reponse }}</p>

                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="contact-form">
                {{ form_start(form) }}

                <div class="column gap20">
                    <div class="column aic">
                        <h4>Envoyez nous un message :</h4>
                    </div>
                    <div class="column form-item">
                        {{ form_label(form.nom, 'Nom : ') }}
                        {{ form_widget(form.nom) }}
                        {{ form_errors(form.nom) }}
                    </div>
                    <div class="column form-item">
                        {{ form_label(form.email, 'Email : ') }}
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="column form-item">
                        {{ form_label(form.objet, 'Objet : ') }}
                        {{ form_widget(form.objet) }}
                        {{ form_errors(form.objet) }}
                    </div>
                    <div class="column form-item">
                        {{ form_label(form.message, 'Message : ') }}
                        {{ form_widget(form.message) }}
                        {{ form_errors(form.message) }}
                    </div>

                    <div class="row jcc">
                        <button class="cta">Envoyer
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M48 64C21.5 64 0 85.5 0 112c0 15.1 7.1 29.3 19.2 38.4L236.8 313.6c11.4 8.5 27 8.5 38.4 0L492.8 150.4c12.1-9.1 19.2-23.3 19.2-38.4c0-26.5-21.5-48-48-48H48zM0 176V384c0 35.3 28.7 64 64 64H448c35.3 0 64-28.7 64-64V176L294.4 339.2c-22.8 17.1-54 17.1-76.8 0L0 176z"/></svg>
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>


            </div>
        </div>
    </section>
    <section>
        <div class="column jcc aic">
            <div class="title">
                <h2>Nos coordonnées&nbsp:</h2>
            </div>
            <div class="dual-grid gap40">
                <div class="column gap20 jcc">
                    <div class="row gap20 aic">
                        <svg class="footer-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z"/></svg>
                        <p>13 Rue de l'Aimable Nanette, 17000 La Rochelle, France</p>
                    </div>
                    <div class="row gap20 aic">
                        <svg class="footer-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M164.9 24.6c-7.7-18.6-28-28.5-47.4-23.2l-88 24C12.1 30.2 0 46 0 64C0 311.4 200.6 512 448 512c18 0 33.8-12.1 38.6-29.5l24-88c5.3-19.4-4.6-39.7-23.2-47.4l-96-40c-16.3-6.8-35.2-2.1-46.3 11.6L304.7 368C234.3 334.7 177.3 277.7 144 207.3L193.3 167c13.7-11.2 18.4-30 11.6-46.3l-40-96z"/></svg>
                        <p>05 46 41 88 99</p>
                    </div>
                    <div class="row gap20 aic">
                        <svg class="footer-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M48 64C21.5 64 0 85.5 0 112c0 15.1 7.1 29.3 19.2 38.4L236.8 313.6c11.4 8.5 27 8.5 38.4 0L492.8 150.4c12.1-9.1 19.2-23.3 19.2-38.4c0-26.5-21.5-48-48-48H48zM0 176V384c0 35.3 28.7 64 64 64H448c35.3 0 64-28.7 64-64V176L294.4 339.2c-22.8 17.1-54 17.1-76.8 0L0 176z"/></svg>
                        <p>coolisses@wanadoo.fr</p>
                    </div>
                </div>

                <div class="column">
                    <iframe style="filter: grayscale(30%) hue-rotate(350deg) invert(0%); width: 100%"  class="google-map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3045.8949256871824!2d-1.1528361549436914!3d46.15523442017642!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x480153afd898ddd3%3A0x69a7fca83d1bf16f!2sAssociation%20Coolisses!5e0!3m2!1sfr!2sfr!4v1709249939118!5m2!1sfr!2sfr&theme=dark" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </section>

    <script src="{{ asset('/scripts/accordion.js') }}"></script>
    <script >
        const displayAlert = {{ sended ? 'true' : 'false' }};
        const alert = document.getElementById('alert-contact');
        const closeBtn = document.getElementById('alert-btn-close')
        if(displayAlert){
            alert.style.display = 'block';
        }

        closeBtn.addEventListener("click", () => {
            alert.style.display = 'none';
        })
    </script>


{% endblock %}

