{% extends 'base.html.twig' %}

{% block meta_tags %}
    <meta name="description" content="formations proposés par Coolisses, l'association rochelaise de professionnels du cinéma">
    <meta name="keywords" content="coolisses, association, cinema, la rochelle, services, ateliers, formations, stages, ressources, location, materiel, accompagnement">
    <meta name="robots" content="index, follow">

    <!--meta og:description -->
{% endblock %}

{% block title %}Nos formations{% endblock %}

{% block body %}
    <style>
        .cimema-spacer {
            margin: 60px 0 80px 0;
            height: 30px;
        }

        .side-img {
            width: 100%;
            aspect-ratio: 2/1;
            object-fit: cover;
        }
    </style>
    <section class="column gap40">
        <div class="column aic gap20">
            <h1 class="little-title tac">Nos formations professionnelles</h1>
            <p class="big-text">
                Affinez votre art de l'écriture de scénario, perfectionnez vos techniques de prise de vue
                et de son, ou maîtrisez l'art du montage vidéo.
            </p>
        </div>
        <div class="tri-grid gap40">
            {% for formation in formations %}
                <a class="card" {% if formation.PDFName %} href="{{ asset('/images/formationPDF/' ~ formation.PDFName) }}" target="_blank" {% endif %}>
                    <img src="{{ vich_uploader_asset(formation, 'imageFile') }}" alt="">
                    <div class="content column gap10">
                        <p>{{ formation.duree }}</p>
                        <h4 class="card-title">{{ formation.titre }}</h4>
                        <p>{{ formation.description }}</p>
                        <p>Avec : {{ formation.intervenants }}</p>
                    </div>
                </a>
            {% endfor %}
        </div>
    </section>

{% endblock %}