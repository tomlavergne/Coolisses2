<style>
    header {
        top: 0;
        left: 0;
        position: sticky;
        background-color: var(--background-color2);
        width: 100%;
        z-index: 900;
        box-shadow: 0 0 20px rgba(0, 0, 0, 20%);
    }

    .header-logo {
        height: 60px;
        width: auto;
    }

    .header-content {
        position: sticky;
        top: 0;
        width: 100%;
        padding: 10px var(--padding-w);
        display: grid;
        grid-template-columns: 1fr 1fr;
    }
    .header-content:last-child {
        justify-self: end;
    }

    #tablet-header {
        display: none;
    }

    #mobile-header {
        display: none;
    }


    @media only screen and (max-width: 1200px) {
        .header-content {
            grid-template-columns: 1fr 1fr;
        }

        #tablet-header {
            display: block;
        }

        #computer-header {
            display: none;
        }

        #mobile-header {
            display: none;
        }
    }

    @media only screen and (max-width: 600px) {

        #mobile-header {
            display: block;
        }

        #tablet-header {
            display: none;
        }

        #computer-header {
            display: none;
        }
    }


    .dropdown {
        transform: translate(-15px, 10px);
        padding: 15px;
        border-radius: 10px;
        background-color: white;
        position: absolute;
        z-index: 9999;
        box-shadow: 0 0 10px rgba(0, 0, 0, 20%);
    }

    .menu-item-dropdown {
        display: none;
        flex-direction: column;
    }

    .menu-item{
        gap: 10px;
        white-space: nowrap;
        padding: 10px 0;
    }
    .menu-item .dropdown-icon {
        fill: var(--text-light);
    }

    .menu-item:hover .menu-item-dropdown{
        display: flex;
    }
    .menu-item:hover .dropdown-icon {
        fill: var(--dark-blue);
    }
    .menu-item:hover .dropdown-trigger-a  {
        color: var(--dark-blue);
    }

    .dropdown a {
        margin: 0;
    }

    .icon {
        width: 15px;
    }

    .big-icon {
        width: 20px;
    }

    .burger-btn .icon {
        fill: var(--text-light);
    }

    .burger-btn:hover .icon {
        fill: var(--dark-blue);
    }

    .drawer-overlay{
        background-color: black;
        width: 100%;
        height: 100%;
        position: fixed;
        top: 0;
        opacity: 0;
        transform: translateX(100%);
        transition: opacity 0.3s ease-in-out;
        z-index: 950;
    }

    .drawer-div {
        position: fixed;
        top: 0;
        height: 100%;
        width: 100%;
        display: flex;
        justify-content: end;
        transform: translateX(100%);
        transition: transform 0.3s ease;
        z-index: 1000;
    }

    .drawer {
        background: var(--background-color);
        width: 80%;
        height: 100%;
        padding: 50px;
    }

    .drawer-content {
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        height: 100%;

    }

    .drawer-dropdown {
        display: flex;
        flex-direction: column;
    }

    .close-drawer-btn {
        position: absolute;
        top: 20px;
        right: 20px;
    }
    .close-drawer-btn .big-icon {
        fill: var(--text-light);
    }
    .close-drawer-btn:hover .big-icon {
        fill: var(--dark-blue);
    }

    .spacer-x {
        height: 1px;
        width: 100%;
        background-color: black;
    }

    .admin-nav-div{
        background-color: var(--very-dark-blue);
        width: 100%;
    }

    .admin-nav {
        height: 40px;
        width: 100%;
        padding: 0 var(--padding-w);

    }
    .admin-nav a {
        color: white;
    }
    .admin-nav a:hover {
        color: yellow;
    }

    .alert-div {
        width: 100%;
        padding: 10px;
        background-color: var(--very-dark-blue);
        display: flex;
        flex-direction: column;
    }

    .alert-link {
        color: white;
    }
    .alert-link svg {
        fill: white;
    }

    .close-alert-btn {

    }

    .alert-content {
        padding: 0 var(--padding-w);
        width: 100%;
    }

    .little-icon {
        height: 20px;
        width: 20px;
    }

    @media only screen and (max-width: 600px) {
        .alert-div {
            display: none!important;
        }
    }

</style>

